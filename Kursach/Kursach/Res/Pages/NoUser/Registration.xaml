<Page x:Class="Kursach.Res.Pages.NoUser.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.Res.Pages.NoUser"
      xmlns:e="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <WrapPanel Orientation="Horizontal">
            <Label Content="Регистрация" FontSize="42" Width="4000"/>

            <WrapPanel x:Name="labels" Orientation="Vertical">
                <Label Content="Email"/>
                <Label Content="Подтвердить Email"/>
                <Label Content="Дата рождения"/>
                <Label Content="Имя"/>
                <Label Content="Фамилия"/>
                <Label Content="Отчество"/>
                <Label Content="Телефон"/>
                <Label Content="Пароль"/>
                <Label Content="Повторить пароль"/>
            </WrapPanel>
            <WrapPanel x:Name="tbs">
                <e:MaskedTextBox x:Name="mtbEmail"/>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</Page>
