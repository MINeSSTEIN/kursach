<Page x:Class="Kursach.Res.Pages.NoUser.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.Res.Pages.NoUser"
      xmlns:e="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid>
        <Label Content="Регистрация" FontSize="42" Width="4000"/>

        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,84,0,0">

            <WrapPanel x:Name="labels" Orientation="Vertical" Margin="0,0,0,0">
                <Label Content="Email"/>
                <Label Content="Подтвердить Email"/>
                <Label Content="Дата рождения"/>
                <Label Content="Имя"/>
                <Label Content="Фамилия"/>
                <Label Content="Отчество"/>
                <Label Content="Телефон"/>
                <Label Content="Пароль"/>
                <Label Content="Повторить пароль"/>
            </WrapPanel>
            <WrapPanel x:Name="tbs" Orientation="Vertical">
                <e:MaskedTextBox x:Name="mtbEmail" Width="180"/>
                <e:MaskedTextBox x:Name="mtbEmailConfirm" Width="180"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="cbDate" Width="40"/>
                    <ComboBox x:Name="cbMonth" SelectionChanged="cbMonth_SelectionChanged" Width="70"/>
                    <ComboBox x:Name="cbYear" SelectionChanged="cbYear_SelectionChanged" Width="60"/>
                </StackPanel>

            </WrapPanel>
        </WrapPanel>
    </Grid>
</Page>
