<Page x:Class="Kursach.Res.Pages.NoUser.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kursach.Res.Pages.NoUser"
      xmlns:e="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid>
        <Label Content="Вход" FontSize="42" Width="4000"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <Label Content="Введите телефон" Margin="300,0" />
            <e:MaskedTextBox x:Name="tbLogin" Width="200" Mask="+7(000)000-00-00"/>
            <Label Content="Введите пароль" Margin="300,0"/>
            <PasswordBox x:Name="pbPassword" Width="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button x:Name="btnLogin" Content="Войти" Margin="5" Click="btnLogin_Click"/>
                <Button x:Name="btnRegistration" Content="регистрация" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
